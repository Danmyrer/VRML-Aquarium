EXTERNPROTO Fish [
    field SFColor color
] "fish.wrl"

PROTO DeckenLicht [
] {
    SpotLight {
        on TRUE 
        intensity 1 
        ambientIntensity 0  
        color 0 0.4 8
        location 0 0 0 
        direction 0 -1 0 
        attenuation 1 0 0 
        radius 100 
        cutOffAngle 0.78 
        beamWidth 1.57 
    }
}

PROTO RaumLicht [
] {
    PointLight {
        on TRUE 
        intensity 1 
        ambientIntensity 0 
        color 1 1 1 
        location 0 0 0 
        attenuation 1 0 0 
        radius 1000 
    }
}

