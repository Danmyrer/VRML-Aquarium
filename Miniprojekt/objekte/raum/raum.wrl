PROTO Fenster [
    field MFString textureUrl "../../res/Fabric062.png"
    field SFVec2f textureScale 10 10
    field SFVec3f scale 1 1 1
    field SFVec3f position 0 0 0
] {
    Transform {
        scale IS scale
        translation IS position
        children [
            Fensterbrett { }
            Fenster_Rahmen { }
        ]
    }
}

