#VRML V2.0 utf8

PROTO Wand [
    field SFVec3f scale 1 1 1
    field SFVec3f position 0 0 0
    field MFString textureUrl "../../res/Fabric062.png"
    field SFVec2f textureScale 2.5 2.5
] {
    Transform {
        translation IS position
        scale IS scale
        children [
            Shape {
                geometry Box { 
                    size 1 1 1
                }
                appearance Appearance {
                    material Material { }
                    texture ImageTexture {
                        url IS textureUrl
                    }
                    textureTransform TextureTransform {
                        scale IS textureScale
                    }
                }
            }
        ]
    }
}

PROTO Glas [
    field SFVec3f scale 1 1 1
    field SFVec3f position 0 0 0
] {
    Transform {
        scale IS scale
        translation IS position
        children [
            Shape {
                appearance Appearance {
                    material Material {
                        diffuseColor 0.5 0.5 0.5
                        transparency 0.5
                        specularColor 1.0 1.0 1.0
                    }
                }
            geometry Box { size 1 1 1 }
            }
        ]
    }
}

PROTO Wand_Fenster [
    field MFString textureUrl "../../res/Fabric062.png"
    field SFVec2f textureScale 10 10
    field SFVec3f scale 1 1 1
    field SFVec3f position 0 0 0
] {
    Transform {
        scale IS scale
        translation IS position
        children [
            Shape {
                geometry IndexedFaceSet {
                    coord Coordinate { point [
                        0 0 0 # 0
                        0 3 0 # 1
                        10 0 0 # 2
                        10 3 0 # 3
                        # Fenster 1
                        1.25 0.5 0 # 4
                        2.75 0.5 0 # 5
                        1.25 2.5 0 # 6
                        2.75 2.5 0 # 7
                        # Fenster 2
                        4.25 0.5 0 # 8
                        5.75 0.5 0 # 9
                        4.25 2.5 0 # 10
                        5.75 2.5 0 # 11
                        # Fenster 3
                        7.25 0.5 0 # 12
                        8.75 0.5 0 # 13
                        7.25 2.5 0 # 14
                        8.75 2.5 0 # 15
                    ]}
                    coordIndex [
                        4 6 1 0 -1
                        15 3 1 6 -1
                        15 13 2 3 -1
                        13 4 0 2 -1
                        5 8 10 7 -1
                        12 14 11 9 -1
                    ]
                }
                appearance Appearance {
                    material Material { }
                    texture ImageTexture {
                        url IS textureUrl
                    }
                    textureTransform TextureTransform {
                        scale IS textureScale
                    }
                }
            }
        ]
    }
}

PROTO Fensterbrett [
    field MFString textureUrl "../../res/marble_01.jpg"
    field SFVec2f textureScale 5 2.5
    field SFVec3f scale 1 1 1
    field SFVec3f position 0 0 0
] {
    Wand {
        scale 1.5 0.05 0.2
        position 0.75 -0.025 0.1
        textureUrl IS textureUrl
        textureScale IS textureScale
    }
}

