#VRML V2.0 utf8

EXTERNPROTO Raum [
] "basis/raum.wrl#Raum"

EXTERNPROTO Tisch [
    field SFVec3f scale
    field SFVec3f position
] "einrichtung/tisch.wrl#Tisch"

EXTERNPROTO Deckenlampe [
    field SFVec3f position
    exposedField SFBool aktiv
] "einrichtung/deckenlampe.wrl#Deckenlampe"

EXTERNPROTO Teppich [
    field SFVec3f position
] "einrichtung/teppich.wrl#Teppich"

EXTERNPROTO Stuhl [
    field SFVec3f position
] "einrichtung/stuhl.wrl#Stuhl"

EXTERNPROTO Couch [
    field SFVec3f position
] "einrichtung/couch.wrl#Couch"

EXTERNPROTO Lichtschalter [
    field SFVec3f position
] "einrichtung/lichtschalter.wrl#Lichtschalter"

PROTO Zimmer [
    field SFVec3f scale 1 1 1
    field SFVec3f position 0 0 0
] {
    Transform {
        translation IS position
        scale IS scale
        children [
            Raum { }
            Tisch {
                position 8.225 0.625 3.75
            }
            DEF Deckenlampe Deckenlampe {
                position 5 2.4 2.5
            }
            Teppich {
                position 3.45 0.01 2
            }
            Stuhl {
                rotation 0 1 0 3.14159
                position 1.5 0.4 4.95
            }
            Couch {
                rotation 0 1 0 3.14159
                position 3.75 0.4 4.95
            }
            Lichtschalter {
                position 6 1.5 4.99
                rotation 0 1 0 3.14159
            }
            Transform {
                translation 6 1.5 4.99
                children [
                    Shape {
                        geometry Box { size 0.3 0.3 0.3 }
                        appearance Appearance {
                            material Material {
                                diffuseColor 1 0 0
                                transparency 1
                            }
                        }
                    }
                    DEF Sensor TouchSensor { }
                ]
            }
        ]
    }

    DEF LichtZustand Script {
    eventIn SFBool startZustand
    eventOut SFBool detonationResult
    directOutput TRUE
    field SFBool aktiv TRUE
    url "castlescript:
    function startZustand(wert, timestamp)
        detonationResult := if (wert, aktiv :=
            if (aktiv, FALSE, TRUE),
            if (aktiv, TRUE, FALSE))"
    }

    ROUTE Sensor.isActive TO LichtZustand.startZustand
    ROUTE LichtZustand.detonationResult TO Deckenlampe.aktiv
}

# Zum Testen
Zimmer { }