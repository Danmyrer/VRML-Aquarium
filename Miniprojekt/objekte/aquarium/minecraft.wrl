#VRML V2.0 utf8

PROTO Pflanze [
    field SFVec3f position 0 0 0
    field SFVec3f scale 1 1 1
] {
    Transform {
        translation IS position
        scale IS scale
        children [
            Shape {
                geometry Box { size 2 4 2 }
                appearance Appearance {
                    material Material { }
                    texture ImageTexture {
                        url "../../res/Moss002.jpg"
                    }
                    textureTransform TextureTransform {
                        scale 4 4
                    }
                }
            }
        ]
    }
}

