#VRML V2.0 utf8

EXTERNPROTO Fish [
    field SFColor color
] "fisch/fish.wrl"

EXTERNPROTO Boden [
] "boden.wrl#Boden"

PROTO DeckenLicht [
    exposedField SFBool aktiv TRUE
] {
    SpotLight {
        on IS aktiv
        global TRUE
        intensity 1
        ambientIntensity 0.2
        color 0.8 0.9 1
        location 0 0 0
        direction 0 -1 0
        attenuation 0.5 0.1 0.05
        radius 100
        cutOffAngle 0.55
        beamWidth 0.2
    }
}

PROTO DebugBox [ ] {
    Shape {
        appearance Appearance {
            material Material {
                diffuseColor 1 1 1
            }
        }
        geometry Box { size 1 1 1 }
    }
}

PROTO Aquarium [
    field SFVec3f scale 1 1 1
    field SFVec3f position 0 0 0
    field SFRotation rotation 0 0 0 0
    exposedField SFBool switchState TRUE
] {
    Transform {
        scale IS scale
        translation IS position
        rotation IS rotation
        children [
            Transform {
                scale 0.0125 0.0125 0.0125
                children [
                    Transform {
                        scale 166 81 81
                        children [
                            Shape {
                                geometry Box { size 1 1 1 }
                                appearance Appearance {
                                    material Material {
                                        transparency 0.5
                                        diffuseColor 0.8 0.9 1
                                        specularColor 1.0 1.0 1.0
                                    }
                                }
                            }
                        ]
                    }
                    Boden {
                        position -82.5 -40 -40
                    }
                    Transform {
                        translation 0 40 0
                        children [
                            Transform {
                                translation 40 0 0
                                children [
                                    DebugBox { }
                                    DeckenLicht {
                                        aktiv IS switchState
                                    }
                                ]
                            }
                            Transform {
                                translation -40 0 0
                                children [
                                    DebugBox { }
                                    DeckenLicht {
                                        aktiv IS switchState
                                    }
                                ]
                            }
                        ]
                    }

                    Transform {
                        translation -50 0 10
                        children [
                            Shape {
                                appearance Appearance {
                                    material Material {
                                        diffuseColor 1 0 0
                                    }
                                }
                                geometry Sphere {
                                        radius 3
                                }
                            }
                        ]
                    }                    
                    DEF FishNode Transform {
                        translation -50 0 10
                        rotation 0 1 0 0
                        children [
                            Transform {
                                translation 0 0 -10
                                children [
                                    Fish { 
                                        color 1 0 0
                                        name "Hans Detlef" 
                                    }
                            ]
                            }

                        ]
                    }
                    Transform {
                        translation 10 17 4
                        rotation 1 0 2 0.45
                        children [
                            Fish { 
                                color 1 0 1
                                name "Johanna Beispiel"
                            }
                        ]
                    }
                    Transform {
                        translation 20 4 -6
                        rotation 2 0 1.5 0.67
                        children [
                            Fish {
                                color 0 1 0
                                name "Brigitte Brett"
                            }
                        ]
                    }
                    Transform {
                        translation -5 -4 -8
                        rotation 2 1 0.5 0.29
                        children [
                            Fish { 
                                color 0.59 0.15 0.99
                                name "Bill Clinton"
                            }
                        ]
                    }
                ]
            } 
        ]
    }

    DEF line PositionInterpolator {
        keyValue [
            -50 0 0, 10 0 0, 10 0 0, -50 0 0
        ]
        key [ 0, 0.3333, 0.5, 0.83333, 1]
    }

    DEF circle OrientationInterpolator {
        keyValue [
            0 1 0 0, 0 -1 0 0, 0 -1 0 3.141, 0 -1 0 3.141
        ]
        key [ 0, 0.333, 0.666, 1 ]
    }

    DEF timer TimeSensor {
        cycleInterval 30
        startTime 0
        loop TRUE
    }

    ROUTE timer.fraction_changed TO line.set_fraction
    ROUTE timer.fraction_changed TO circle.set_fraction
    ROUTE line.value_changed TO FishNode.set_translation
    ROUTE circle.value_changed TO FishNode.set_rotation

}
    
Aquarium { }
